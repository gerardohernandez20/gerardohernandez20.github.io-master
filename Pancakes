  <title>Pancakes Stack</title>

let carX = 50;

function setup(){
  createCanvas(500, 500);


}

	function draw() {
	background(119, 0, 0, 15);

			if (carX >500) {
			carX =- 50;
		} else if (carX>200) {
			carX +=100;
	} else {
		carX += 3;
	}
      fill(0);
	stroke(255);
	strokeWeight(5);
	ellipse(carX ,505, 130,720, 203);
	ellipse(carX, 35, 30 ,120 ,206);

		if (carX >500) {
			carX =- 50;
		} else if (carX>250) {
			carX +=100;
	} else {
		carX += 3;
	}
      fill(0);
	stroke(255);
	strokeWeight(5);
	ellipse(carX ,300, 30, 20, 20);
	ellipse(carX, 225, 40 ,20 ,20);

		if (carX >500) {
			carX =- 50;
		} else if (carX>250) {
			carX +=100;
	} else {
		carX += 3;
	}
		fill(0);
	stroke(255);
	strokeWeight(5);
	ellipse(carX ,325, 30, 20, 20);
	ellipse(carX, 325, 30 ,120 ,20);

		if (carX >500) {
			carX =- 50;
		} else if (carX>250) {
			carX +=100;
	} else {
		carX += 3;
	}

		//draw race car
		noStroke();
		fill(40, 50, 250);
		rect(carX, 300, 50, 30);
	}
